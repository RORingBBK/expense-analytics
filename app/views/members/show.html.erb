<% provide(:title, @member.member_name) %>
<script>
	$(function () {
    $('#container').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: 'Expenses and Incomes'
        },
        subtitle: {
            text: 'Source: ExpenseAnalytics.com'
        },
        xAxis: {
            type: 'datetime',
            dateTimeLabelFormats: {
            	day: '%e of %b'
            }
        },
        yAxis: {
            title: {
                text: 'Currency'
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true
                },
                enableMouseTracking: false
            }
        },
        series: [{
        			data: [
	        			<% @income.each do |income| %>
	        				<%= income.amount %>,
	        			<% end %>
        			]},
        			{
        				data: [
        					<% @expense.each do |expense| %>
        						<%= expense.amount %>
        					<% end %>
        				]
        	}]
    });
});
</script>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<p><%= gravatar_for @member %></p>
				<!-- Check alternative later. -->
				<br><br><br><br><br>
				<p>Name: <%= @member.member_name %></p>
				<p>Email: <%= @member.member_email %></p>
				<p>Country: <%= @member.member_country %></p>
				<p>Month's Saving: </p>
			</h1>

			<!-- Check alternative later. -->
			<br><br><br><br><br><br>
			<p>Money Left: <%= link_to("Add Income", '#') %></p>

			<!-- Check for alternative -->
			<br><br><br><br>
			<p><%= link_to "Edit my profile", edit_member_path(current_member) %></p>
		</section>
	</aside>
	<div class="col-md-8">
		<div class="income">
			<%= link_to "Expenses", expenses_path %> | 
			<%= link_to "Incomes", incomes_path %>
		</div>
		<div id="container" style="height: 400px; width: 500px;">
		</div>
		<div class="reminder">
			<span><h3>Bill Reminders</h3> | 
			<%= link_to "Add Reminder", new_reminder_path(@reminder), class: 'btn btn-default' %> </span>

		</div>
	</div>
</div>

