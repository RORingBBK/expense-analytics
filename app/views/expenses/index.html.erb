<% provide(:title, "Expense") %>
<h1>Expense Listing</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Title</th>
			<th>Description</th>
			<th>Amount</th>
			<th>Category</th>
			<th>Date</th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<tbody class="expense">
		<% @expenses.each do |expense| %>
			<tr>
				<td>&bull;</td>
				<td><%= expense.title %></td>
				<td><%= expense.description %></td>
				<td><%= expense.amount %></td>
				<td>Entertainment</td>
				<td><%= expense.date %></td>
				<td><%= link_to "Update", '#' %>
						<%= link_to "Delete", '#', method: :delete,
						data: { confirm: 'Are you sure?' } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>