<% provide(:title, "Expenses") %>

<div class="container">
	<div class="expense">
		<%= link_to "Add Expense", new_expense_path, 
				remote: true, class: 'btn btn-primary' %>
	</div>
	<div class="new-income"></div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<td>Title</td>
				<td>Description</td>
				<td>Amount</td>
				<td>Date</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
		</thead>

		<tbody class="expense-index">
			<%= render 'index' %>
		</tbody>
	</table>
</div>
<div id="expense-modal" class="modal fade"></div>