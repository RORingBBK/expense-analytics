<% provide(:title, "Income") %>

<div class="container">
	<div class="income">
		<%= link_to "Add Income", new_income_path,
				remote: true, class: 'btn btn-primary' %>
	</div>

	<div class="new-income"></div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Date</th>
				<th>Amount</th>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
			</tr>
		</thead>

		<tbody class="income-index">
			<%= render "index" %>
		</tbody>
	</table>
</div>
<div id="income-modal" class="modal fade"></div>