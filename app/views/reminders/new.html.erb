<% provide(:title, "Reminder") %>
<h3>Add Reminder</h3>

<div class="row">
	<div class="col col-md-6 col-md-offset-3">
		<%= form_for(@reminder) do |f| %>
			<% if @reminder.errors.any? %>
				<% @reminder.errors.full_messges.each do |msg| %>
					<%= msg %>
				<% end %>
			<% end %>

			<div class="form-group">
				<%= f.label :title, class: "control-label" %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>

			<div class="form_group">
				<%= f.label :date %>
				<div class="input-group date", data-provider="datepicker" data-date-format="yyyy/mm/dd">
					<%= f.text_field :date_notify %>
					<div class="input-group-addon">
						<span class="glyphicon glyphicon-th"></span>
					</div>
				</div>
			</div>

			<div>
				<%= f.label :description, class: "control-label" %>
				<%= f.text_field :description, class: 'form-control' %>
			</div>

			<div>
				<%= f.submit "Submit", class: 'btn btn-primary' %>
			</div>

		<% end %>
	</div>
</div>